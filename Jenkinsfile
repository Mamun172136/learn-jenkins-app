pipeline {
    agent any

    stages {
        stage('Build') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                    args '-v C:/Users/hp/.jenkins/workspace/learn-app:/workspace' // Correct path format for Docker on Windows
                }
            }
            steps {
                sh '''
                    ls -la
                    node --version
                    npm --version
                    npm ci
                    npm run build
                    ls -la
                '''
            }
        }
        stage("Test") {
            steps {
                echo 'Test stage'
            }
        }
    }
}
